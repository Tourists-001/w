.scroll {
    height: 90vh;
    margin-top: 20rpx;
}
.container {
    /* width: 100vh; */
    display: flex;
    /* justify-content: center; */
    align-items: center;
    background-color: #fefefe;
}
.avatar {
    width: 80rpx;
    height: 80rpx;
    border: 4rpx solid #303030;
    border-radius: 28rpx;
}
.item {
    /* width: 90%; */
    width: 100vw;
    display: flex;
    /* align-items: center; */
    /* justify-content: space-between; */
    background: #ffffff;
    /* border-radius: 20rpx; */
    /* box-shadow: 0px 4rpx 10rpx 0px rgba(0, 0, 0, 0.20); */
    margin-bottom: 15rpx;
    position: relative;
    padding: 10rpx 20rpx 10rpx 20rpx;
    border-bottom: 1rpx solid #f9f9f9;
    box-sizing: border-box;
    position: relative;
}
.info {
    margin-left: 20rpx;
    width: 600rpx;
}
.content{
    width: 500rpx;
    overflow: hidden;
    word-break: keep-all;
    text-overflow:ellipsis;
    font-size: 24rpx;
    padding-top: 10rpx;
    color: #777474;
}
.top {
    display: flex;
    justify-content: space-between;
}
.time {
    font-size: 24rpx;
    padding-top: 10rpx;
    color: #777474;
    /* margin-left: 20rpx; */
}
.swiper_cell {
    width: 100vw;
    display: flex;
}

.van-swipe-cell__right {
    box-sizing: border-box;
    width: 130rpx;
    height: 100%;
    color: #fff;
    background-color: #ee0a24;
    border: 1px solid #ee0a24;
    display: flex;
    justify-content: center;
    align-items: center;
}
.del {
    display: block;
}

.vant_info{
    position: absolute;
    top: 80rpx;
    right: 44rpx;
    box-sizing: border-box;
    min-width: 16px;
    padding: 0 3px;
    color: #fff;
    font-weight: 500;
    font-size: 12px;
    font-family: -apple-system-font, Helvetica Neue, Arial, sans-serif;
    line-height: 1.2;
    text-align: center;
    background-color: #ee0a24;
    border: 1px solid #fff;
    border-radius: 16px;
    -webkit-transform: translate(50%, -50%);
    transform: translate(50%, -50%);
    -webkit-transform-origin: 100%;
    transform-origin: 100%;
}