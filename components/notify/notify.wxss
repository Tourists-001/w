.notify_container {
    width: 95vw;
    border-radius: 50rpx;
    position: absolute;
    left: 50%;
    margin-left: -47.5vw;
    margin-top: 60rpx;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border: 4rpx solid #303030;
    border-radius: 28rpx;
}
.item {
    /* width: 90%; */
    /* width: 100vw; */
    display: flex;
    /* align-items: center; */
    /* justify-content: space-between; */
    background: #ffffff;
     border-radius: 20rpx; 
     box-shadow: 0px 4rpx 10rpx 0px rgba(0, 0, 0, 0.20); 
    margin-bottom: 15rpx;
    position: relative;
    padding: 10rpx 20rpx 10rpx 20rpx;
    border-bottom: 1rpx solid #f9f9f9;
    box-sizing: border-box;
    position: relative;
}
.info {
    margin-left: 20rpx;
    width: 600rpx;
}
.content{
    width: 500rpx;
    overflow: hidden;
    word-break: keep-all;
    text-overflow:ellipsis;
    font-size: 24rpx;
    padding-top: 10rpx;
    color: #777474;
}
.top {
    display: flex;
    justify-content: space-between;
}
.time {
    font-size: 24rpx;
    /* padding-top: 10rpx; */
    color: #777474;
    /* margin-left: 20rpx; */
}
.swiper_cell {
    width: 100vw;
    display: flex;
}

.van-swipe-cell__right {
    box-sizing: border-box;
    width: 130rpx;
    height: 100%;
    color: #fff;
    background-color: #ee0a24;
    border: 1px solid #ee0a24;
    display: flex;
    justify-content: center;
    align-items: center;
}
.del {
    display: block;
}