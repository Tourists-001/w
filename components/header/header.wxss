
  /**导航栏**/
  .navigation{
	width: 100%;
	height: 90rpx;
	background: #ffffff;
	/* box-shadow: 0px 0px 10px 0px rgba(203,203,203,0.50);  */
	display: flex;
	position: fixed;
	z-index: 500;
  }
  .navigation-item{
	display: flex;
	width: 15%;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	position: relative;
  }
  
  .select-tab{
	color: #303030;
	font-weight: 500;
	color: #303030;
	position: absolute;
  }
  
  .select-tab-bootom{
	width: 60rpx;
	height: 10rpx;
	border-radius: 10rpx;
	box-shadow: 0px 0px 8rpx 0px #fbc346; 
	background: #fbc346;
	z-index: 100;
	position: absolute;
	top: 80rpx;
	left: 28rpx;
	transition: all .5s ease-in;
  }
  
  .search-container{
	width: 55%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
  }
  
  .search-image image{
	width: 35rpx;
	height: 35rpx;
  }
  
  .search{
	width: 85%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	height: 70rpx;
	background: #f1f1f1;
	border-radius: 30rpx;
  }
  
  .search-input{
	width: 240rpx;
	height: 25rpx;
	font-size: 24rpx;
	font-family: PingFangSC, PingFangSC-Regular;
	font-weight: 400;
	text-align: left;
	color: #7d7d7d;
	line-height: 35rpx;
  }